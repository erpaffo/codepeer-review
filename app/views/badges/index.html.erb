<!-- app/views/badges/index.html.erb -->
<h1>Your Badges</h1>

<% if @badges.any? %>
  <ul>
  <% @badges.each do |badge| %>
    <li>
      <% if badge.icon_url.present? %>
        <%= image_tag badge.icon_url, alt: badge.name, size: "50x50" %>
      <% else %>
        <%= image_tag 'default_badge.png', alt: 'Default Badge', size: "50x50" %> <!-- Immagine predefinita -->
      <% end %>
      <p><%= badge.name %></p>
      <p><%= badge.description %></p>
    </li>
  <% end %>
  </ul>
<% else %>
  <p>You have no badges yet.</p>
<% end %>

<%= link_to 'My Profile', profile_path, class: 'btn btn-primary' %>

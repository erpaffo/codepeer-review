<!-- app/views/community_activity/feedback.html.erb -->
<h1>Send Feedback for <%= @snippet.title %></h1>

<%= form_with url: create_feedback_community_activity_path(@snippet), local: true do |form| %>
  <div class="form-group">
    <%= form.label :content, "Feedback" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Send Feedback", class: "btn btn-primary" %>
  </div>
<% end %>

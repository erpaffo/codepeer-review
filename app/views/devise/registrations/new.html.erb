<div class="font-Inter bg-gray-900 text-gray-300 flex items-center justify-center min-h-screen">
  <div class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-bold text-center mb-6 text-white">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-400" %>
        <%= f.email_field :email, value: params[:email], autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full border rounded bg-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring focus:ring-teal-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-400" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 p-2 w-full border rounded bg-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring focus:ring-teal-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-400" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 p-2 w-full border rounded bg-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring focus:ring-teal-500" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Sign up", class: "w-full bg-teal-600 text-white py-2 rounded-lg hover:bg-teal-500 transition-all duration-300 transform hover:scale-105" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<script>
  window.onload = function() {
    var urlParams = new URLSearchParams(window.location.search);
    var email = urlParams.get('email');
    if (email) {
      document.querySelector('[name="user[email]"]').value = email;
    }
  };
</script>

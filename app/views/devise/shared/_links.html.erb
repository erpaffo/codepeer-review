      <span class="text">Sign in with GitHub</span>
    <% end %>

    <%= button_to omniauth_authorize_path(resource_name, :gitlab), method: :post, data: { turbo: false }, class: "oauth-btn gitlab-btn" do %>
      <span class="icon">
        <img src="<%= asset_path('gitlab-logo.png') %>" alt="GitLab Logo" class="h-6 w-6">
      </span>
      <span class="text">Sign in with GitLab</span>
    <% end %>
  </div>
<% end %>

<div class="container mx-auto p-6">
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-white mb-4">Edit Snippet</h1>

    <%= form_with(model: @snippet, local: true) do |form| %>
      <% if @snippet.errors.any? %>
        <div id="error_explanation" class="bg-red-500 text-white p-4 rounded-lg mb-4">
          <h2 class="text-lg font-semibold"><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>
          <ul class="list-disc pl-5">
            <% @snippet.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :title, class: "block text-gray-300" %>
        <% if @snippet.user == current_user %>
          <%= form.text_field :title, class: "w-full p-2 bg-gray-700 text-gray-300 rounded-lg" %>
        <% else %>
          <%= form.text_field :title, readonly: true, class: "w-full p-2 bg-gray-700 text-gray-300 rounded-lg" %>
        <% end %>
      </div>

      <div class="mb-4">
        <%= form.label :content, class: "block text-gray-300" %>
        <%= form.text_area :content, class: "w-full p-2 bg-gray-700 text-gray-300 rounded-lg" %>
      </div>

      <div class="mb-4">
        <%= form.label :comment, class: "block text-gray-300" %>
        <%= form.text_area :comment, class: "w-full p-2 bg-gray-700 text-gray-300 rounded-lg" %>
      </div>

      <% if @snippet.user == current_user %>
        <div class="mb-4">
          <%= form.label :favorite, class: "block text-gray-300" %>
          <%= form.check_box :favorite, class: "rounded-lg bg-gray-700 border-gray-600" %>
        </div>
      <% end %>

      <div class="flex space-x-4">
        <%= form.submit 'Update Snippet', class: 'bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-500 transition ease-in-out duration-300' %>
        <%= link_to 'Cancel', authenticated_root_path, class: 'bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-500 transition ease-in-out duration-300' %>
      </div>
    <% end %>
  </div>
</div>

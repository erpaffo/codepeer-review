<div class="container mx-auto p-6">
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-white mb-4"><%= @snippet.title %></h1>

    <div class="mb-4">
      <h2 class="text-lg font-semibold text-gray-300">Content</h2>
      <p class="text-gray-300 leading-relaxed"><%= @snippet.content %></p>
    </div>

    <div class="mb-4">
      <h2 class="text-lg font-semibold text-gray-300">Comment</h2>
      <p class="text-gray-300 leading-relaxed"><%= @snippet.comment %></p>
    </div>

    <div class="mt-6">
      <%= link_to 'Back to Profile', user_profile_with_details_path(@user), class: 'bg-teal-600 text-white py-2 px-4 rounded-lg hover:bg-teal-500 transition ease-in-out duration-300' %>
    </div>
  </div>
</div>

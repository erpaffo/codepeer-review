<div class="container mx-auto p-6">
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-white mb-6"><%= @snippet.title %></h1>

    <div class="mb-6">
      <h2 class="text-xl font-semibold text-teal-400 mb-2">Content</h2>
      <textarea readonly class="w-full p-4 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-400">
        <%= @snippet.content %>
      </textarea>
    </div>

    <div class="mb-6">
      <h2 class="text-xl font-semibold text-teal-400 mb-2">Comment</h2>
      <p class="text-gray-300"><%= @snippet.comment %></p>
    </div>

    <div class="mt-8">
      <%= link_to 'Back to Search Results', search_path(query: params[:query]), class: 'bg-gray-600 text-white py-2 px-4 rounded-lg hover:bg-gray-500 transition ease-in-out duration-300' %>
    </div>
  </div>
</div>

<div class="container mx-auto p-6">
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-white mb-4">My Drafts</h1>

    <ul class="text-gray-300 space-y-2">
      <% @drafts.each do |snippet| %>
        <li>
          <%= link_to snippet.title, snippet_path(snippet), class: "text-teal-400 hover:text-teal-300 transition ease-in-out duration-300" %>
        </li>
      <% end %>
    </ul>

    <div class="mt-6">
      <%= link_to 'Back to My Snippets', my_snippets_path, class: 'bg-teal-600 text-white py-2 px-4 rounded-lg hover:bg-teal-500 transition ease-in-out duration-300' %>
    </div>
  </div>
</div>

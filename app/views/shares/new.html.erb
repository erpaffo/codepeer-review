<div class="snippet-share-container">
  <h2 class="text-white">Condividi Snippet</h2>
  <p class="text-gray-300">Invia questo snippet via email a un destinatario specifico.</p>

  <%= form_with url: share_snippet_path(@snippet), method: :post, local: true, class: "snippet-share-form" do |form| %>
    <div class="form-group">
      <%= form.label :email, 'Email del destinatario:', class: 'text-gray-300' %>
      <%= form.email_field :email, class: 'w-full p-3 rounded-lg bg-gray-700 text-gray-300 mt-2' %>
    </div>
    <div class="form-actions">
      <%= form.submit 'Invia', class: 'btn bg-purple-600 hover:bg-purple-500 text-white px-6 py-2 rounded-lg' %>
     <%= link_to 'Back to Snippet', snippet_path(@snippet), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>

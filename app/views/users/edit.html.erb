<!-- app/views/users/edit.html.erb -->
<h1>Edit Profile</h1>

<%= form_for(current_user, url: profile_path, method: :patch, html: { multipart: true, class: 'profile-form' }) do |f| %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :otp_enabled %><br />
    <%= f.check_box :otp_enabled %>
  </div>

  <div class="field">
    <%= f.label :profile_image, "Profile Image" %><br />
    <% if current_user.profile_image.attached? %>
      <div class="image-preview">
        <%= image_tag current_user.profile_image.variant(resize_to_limit: [100, 100]) %>
      </div>
      <%= f.label :remove_profile_image, "Remove Image" %>
      <%= f.check_box :remove_profile_image %>
    <% end %>
    <%= f.file_field :profile_image %>
  </div>

  <div class="actions">
    <%= f.submit "Update Profile" %>
  </div>
<% end %>

<%= link_to 'Back to Dashboard', authenticated_root_path, class: 'back-link' %>

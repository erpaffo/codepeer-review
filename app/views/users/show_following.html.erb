<div class="profile-container">
  <h1 class="text-3xl font-bold text-white mb-6 text-center">Following</h1>

  <p class="text-center mb-6"><strong>Number of Following:</strong> <%= @following_count %></p>

  <% if @following.present? %>
    <ul class="space-y-4">
      <% @following.each do |following| %>
        <li class="bg-gray-800 p-4 rounded-lg shadow-lg hover:shadow-xl transition ease-in-out duration-300">
          <%= link_to following.nickname.present? ? following.nickname : following.email, user_profile_with_details_path(following), class: "text-lg font-bold text-teal-500 hover:text-teal-300" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-center">Not following anyone yet.</p>
  <% end %>

  <div class="mt-8 text-center">
    <%= link_to 'Back to Profile', profile_path, class: 'btn btn-secondary' %>
  </div>
</div>

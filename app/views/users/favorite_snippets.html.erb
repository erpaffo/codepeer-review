<div class="profile-container">
  <h1 class="text-3xl font-bold text-white mb-6">My Favorite Snippets</h1>

  <ul class="space-y-4">
    <% current_user.snippets.where(favorite: true).each do |snippet| %>
      <li id="snippet-<%= snippet.id %>" class="bg-gray-800 p-4 rounded-lg shadow-lg hover:shadow-xl transition ease-in-out duration-300">
        <%= link_to snippet.title, snippet_path(snippet), class: "text-lg font-bold text-teal-500 hover:text-teal-300" %>
        <%= link_to snippet.favorite ? '★' : '☆', toggle_favorite_snippet_path(snippet), method: :post, remote: true, class: "text-yellow-500 text-lg float-right" %>
      </li>
    <% end %>
  </ul>

  <div class="mt-8">
    <%= link_to 'Back to My Profile', profile_path, class: 'btn btn-secondary' %>
  </div>
</div>

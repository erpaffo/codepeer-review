<div class="container mx-auto p-6">
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-white mb-6">Search</h1>

    <%= form_with url: search_path, method: :post, local: true, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :query, 'Search for users or projects', class: "block text-lg font-medium text-gray-200" %>
        <%= form.text_field :query, class: "w-full p-2 mt-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-400" %>
      </div>
      <div>
        <%= form.submit 'Search', class: "bg-teal-600 text-white py-2 px-4 rounded-lg hover:bg-teal-500 transition ease-in-out duration-300" %>
      </div>
    <% end %>
  </div>
</div>

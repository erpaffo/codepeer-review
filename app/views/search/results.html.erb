<div class="container mx-auto p-6">
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-white mb-6">Search Results</h1>

    <% if @users.any? %>
      <div class="mb-8">
        <h2 class="text-2xl font-semibold text-teal-400 mb-4">Users</h2>
        <ul class="space-y-2">
          <% @users.each do |user| %>
            <li>
              <%= link_to user.nickname, user_profile_from_community_path(user), class: "block text-lg text-teal-300 hover:text-teal-200 transition ease-in-out duration-300" %>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <p class="text-gray-400">No users found.</p>
    <% end %>

    <% if @projects.any? %>
      <div class="mb-8">
        <h2 class="text-2xl font-semibold text-teal-400 mb-4">Projects</h2>
        <ul class="space-y-2">
          <% @projects.each do |project| %>
            <li>
              <%= link_to project.title, project_public_path(project), class: "block text-lg text-teal-300 hover:text-teal-200 transition ease-in-out duration-300" %>
            </li>
          <% end %>
          <% if current_user.admin?%>
            <% @privateprojects.each do |project| %>
            <li>
              <%= link_to project.title, project_public_path(project), class: "block text-lg text-teal-300 hover:text-teal-200 transition ease-in-out duration-300" %>
            </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% else %>
      <p class="text-gray-400">No projects found.</p>
    <% end %>

    <% if @snippets.any? %>
      <div>
        <h2 class="text-2xl font-semibold text-teal-400 mb-4">Snippets</h2>
        <ul class="space-y-2">
          <% @snippets.each do |snippet| %>
            <li>
              <%= link_to snippet.title, snippet_public_path(snippet), class: "block text-lg text-teal-300 hover:text-teal-200 transition ease-in-out duration-300" %>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <p class="text-gray-400">No snippets found.</p>
    <% end %>

    <div class="mt-8">
      <%= link_to 'Back to Search', search_path, class: "bg-teal-600 text-white py-2 px-4 rounded-lg hover:bg-teal-500 transition ease-in-out duration-300" %>
    </div>
  </div>
</div>

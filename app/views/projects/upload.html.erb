<div class="container mx-auto p-6">
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-white mb-4">Upload Project: <%= @project.title %></h1>

    <p class="text-gray-300 mb-6 leading-relaxed"><%= @project.description %></p>

    <h3 class="text-2xl font-semibold text-teal-400 mb-4">Select a Platform to Upload</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mb-6">
      <%= link_to 'Upload to Google Drive', upload_to_google_drive_project_path(@project), method: :post, class: "bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-500 transition ease-in-out duration-300 text-center" %>
      <%= link_to 'Upload to GitHub', upload_to_github_project_path(@project), method: :post, class: "bg-gray-900 text-white py-2 px-4 rounded-lg hover:bg-gray-700 transition ease-in-out duration-300 text-center" %>
      <%= link_to 'Upload to GitLab', upload_to_gitlab_project_path(@project), method: :post, class: "bg-orange-600 text-white py-2 px-4 rounded-lg hover:bg-orange-500 transition ease-in-out duration-300 text-center" %>
    </div>

    <%= link_to 'Back to Project', project_path(@project), class: "bg-teal-600 text-white py-2 px-4 rounded-lg hover:bg-teal-500 transition ease-in-out duration-300" %>
  </div>
</div>

<h1>Edit <%= @file.file_identifier %></h1>

<%= form_for [@project, @file], url: update_file_project_path(@project, file_id: @file.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :file %><br>
    <%= f.file_field :file %>
  </div>

  <div class="actions">
    <%= f.submit "Update File" %>
  </div>
<% end %>

<%= link_to 'Back to Project', project_path(@project), class: "btn btn-primary" %>
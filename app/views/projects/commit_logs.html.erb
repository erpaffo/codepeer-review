<h1>Commit Logs for <%= @project.title %></h1>

<% if @commit_logs.any? %>
  <ul>
    <% @commit_logs.each do |log| %>
      <li>
        <strong><%= log.created_at.strftime("%d/%m/%Y %H:%M:%S") %>:</strong> <%= log.message %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No commits have been made to this project yet.</p>
<% end %>

<%= link_to 'Back to Project', project_path(@project), class: 'btn btn-secondary' %>

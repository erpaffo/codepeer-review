<% if current_user.favorites.exists?(project: project) %>
  <%= button_to toggle_favorite_project_path(project), method: :post, remote: true, class: "favorite-button bg-red-600 hover:bg-red-500 text-white py-2 px-4 rounded-lg flex items-center space-x-2 transition ease-in-out duration-300" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 16.828l-6.828-6.828a4 4 0 010-5.656z" clip-rule="evenodd" />
    </svg>
    <span>Remove from Favorites</span>
  <% end %>
<% else %>
  <%= button_to toggle_favorite_project_path(project), method: :post, remote: true, class: "favorite-button bg-teal-600 hover:bg-teal-500 text-white py-2 px-4 rounded-lg flex items-center space-x-2 transition ease-in-out duration-300" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 16.828l-6.828-6.828a4 4 0 010-5.656z" clip-rule="evenodd" />
    </svg>
    <span>Add to Favorites</span>
  <% end %>
<% end %>

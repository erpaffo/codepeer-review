<h1 class="page-title">My Projects</h1>

<div class="actions-bar">
  <%= link_to 'New Project', new_project_path, class: "btn btn-primary" %>
  <%= link_to 'My Favorite Projects', favorite_projects_projects_path, class: 'btn btn-secondary' %>
</div>

<table class="table project-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= truncate(project.description, length: 50) %></td>
        <td><%= link_to 'Show', project, class: "btn btn-show" %></td>
        <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-edit" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

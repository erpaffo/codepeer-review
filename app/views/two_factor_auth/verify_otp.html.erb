<div class="max-w-md mx-auto bg-gray-800 p-6 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold text-white mb-4 text-center">Two-Factor Authentication</h1>
  <%= form_with url: two_factor_auth_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :otp_code, 'OTP Code', class: "block text-white mb-2" %>
      <%= f.text_field :otp_code, class: "w-full p-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500" %>
    </div>
    <%= f.submit "Verify", class: "w-full bg-teal-500 text-white py-2 rounded-lg hover:bg-teal-400 transition-colors" %>
  <% end %>
</div>

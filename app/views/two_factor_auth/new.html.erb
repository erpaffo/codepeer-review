<div class="max-w-md mx-auto bg-gray-800 p-6 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold text-white mb-4 text-center">Verify OTP Code</h1>
  <p class="text-gray-300 text-center mb-4">We have sent a code to your <%= current_user.two_factor_method == 'sms' ? 'phone' : 'email' %>. Please enter it below:</p>
  <%= form_with url: verify_two_factor_auth_path, method: :post do %>
    <div class="mb-4">
      <%= label_tag :otp_attempt, 'Code', class: "block text-white mb-2" %>
      <%= text_field_tag :otp_attempt, nil, class: "w-full p-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500" %>
    </div>
    <%= submit_tag 'Verify', class: "w-full bg-teal-500 text-white py-2 rounded-lg hover:bg-teal-400 transition-colors" %>
  <% end %>
  <p class="text-gray-300 text-center mt-4">If you didn't receive the code, you can <%= link_to 'send a backup email', send_backup_email_two_factor_auth_path, method: :post, class: "text-teal-500 hover:underline" %>.</p>
</div>
